@model GestionDeFinanzasPersonales.Models.NuevaClaveViewModel
@{
    ViewBag.Title = "Nueva Contraseña";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<h2>NuevaClave</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Usuario</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="form-group">
        @Html.LabelFor(m => m.NuevaClave)
        @Html.PasswordFor(m => m.NuevaClave, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.NuevaClave, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmarClave)
        @Html.PasswordFor(m => m.ConfirmarClave, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ConfirmarClave, "", new { @class = "text-danger" })
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Cambiar contraseña" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Regresar", "Login")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
